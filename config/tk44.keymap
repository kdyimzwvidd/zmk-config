#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BASE 0
#define DIG 1
#define NAV 2
#define ADJ 3

&lt {
    quick_tap_ms = <200>;
};

&mt {
    quick_tap_ms = <200>;
};

/ {
        keymap {
                compatible = "zmk,keymap";

                base_layer {
                        bindings = <
                                //┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐                             ┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                    &none             &mt LWIN GRAVE    &kp Q             &kp W             &kp E             &kp R             &kp T                                           &kp Y             &kp U             &kp I             &kp O             &kp P             &mt RBKT LBKT     &none
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                //└─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┘
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &kp LCTRL         &kp A             &kp S             &kp D             &kp F             &kp G                                           &kp H             &kp J             &kp K             &kp L             &kp SEMI          &mt RCTRL SQT
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &kp LALT          &kp Z             &kp X             &kp C             &kp V             &kp B                                           &kp N             &kp M             &kp COMMA         &kp PERIOD        &kp SLASH         &mt RALT MINUS
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  └─────────────────┴─────────────────┴─────────────────┴────────┬────────┴────────┬────────┴────────┬────────┴────────┐          ┌─────────┴────────┬────────┴────────┬────────┴────────┬────────┴─────────────────┴─────────────────┴─────────────────┘
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                                                                                                     &lt RSE TAB       &mt LSHFT SPACE   &lt LWR RET                  &lt LWR ESC        &mt RSHFT BSPC    &lt RSE DEL
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                //                                                                                 └─────────────────┴─────────────────┴─────────────────┘          └──────────────────┴─────────────────┴─────────────────┘
                        >;
                };
                digits_layer {
                        bindings = <
                                //┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐                             ┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                    &none             &mt LGUI F1       &kp F2            &kp F3            &kp F4            &kp F5            &kp F6                                          &kp F7            &kp F8            &kp F9            &kp F10           &kp F11           &mt RGUI F12      &none
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                //└─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┘
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &mt LCTRL PLUS    &kp EXCL          &kp AT            &kp HASH          &kp DOLLAR        &kp PERCENT                                     &kp CARET         &kp AMPERSAND     &kp ASTERISK      &kp LPAR          &kp RPAR          &mt RCTRL UNDER
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &mt LALT EQUAL    &kp N1            &kp N2            &kp N3            &kp N4            &kp N5                                          &kp N6            &kp N7            &kp N8            &kp N9            &kp N0            &mt RALT MINUS
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  └─────────────────┴─────────────────┴─────────────────┴────────┬────────┴────────┬────────┴────────┬────────┴────────┐          ┌─────────┴────────┬────────┴────────┬────────┴────────┬────────┴─────────────────┴─────────────────┴─────────────────┘
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                                                                                                     &lt ADJ TAB       &trans            &trans                       &trans             &trans            &lt ADJ DEL
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                //                                                                                 └─────────────────┴─────────────────┴─────────────────┘          └──────────────────┴─────────────────┴─────────────────┘
                        >;
                };

                navigation_layer {
                        bindings = <
                                //┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐                             ┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                    &none             &kp LGUI          &none             &none             &none             &none             &none                                           &kp C_VOL_UP      &kp HOME          &kp PSCRN         &kp PG_UP         &kp SLCK          &kp CAPS          &none
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                //└─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┘
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &kp LCTRL         &none             &none             &none             &none             &none                                           &kp C_PLAY_PAUSE  &kp LEFT          &kp UP            &kp RIGHT         &kp INS            &none
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &kp LALT          &none             &kp END           &kp PG_DN         &none             &none                                           &kp C_VOL_DN      &kp END           &kp DOWN          &kp PG_DN         &kp PAUSE_BREAK    &none
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  └─────────────────┴─────────────────┴─────────────────┴────────┬────────┴────────┬────────┴────────┬────────┴────────┐          ┌─────────┴────────┬────────┴────────┬────────┴────────┬────────┴─────────────────┴─────────────────┴─────────────────┘
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                                                                                                     &trans            &trans            &lt ADJ RET                  &lt ADJ ESC        &trans            &trans
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                //                                                                                 └─────────────────┴─────────────────┴─────────────────┘          └──────────────────┴─────────────────┴─────────────────┘
                        >;
                };
                adjust_layer {
                        bindings = <
                                //┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐                             ┌─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┬─────────────────┐
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                    &none             &reset            &kp C_BRI_AUTO    &kp C_BRI_DEC     &kp C_BRI_INC     &none             &none                                           &bt BT_PRV        &bt BT_NXT        &none             &none             &none             &bt BT_CLR        &none
                                //│                 │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │                 │
                                //└─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┘
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &bootloader       &kp C_PREV        &kp C_PP          &kp C_NEXT        &none             &none                                           &bt BT_SEL 0      &bt BT_SEL 1      &bt BT_SEL 2      &bt BT_SEL 3      &bt BT_SEL 4      &none
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤                             ├─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┼─────────────────┤
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                                      &none             &none             &none             &none             &none             &none                                           &none             &none             &none             &none             &none             &none
                                //                  │                 │                 │                 │                 │                 │                 │                             │                 │                 │                 │                 │                 │                 │
                                //                  └─────────────────┴─────────────────┴─────────────────┴────────┬────────┴────────┬────────┴────────┬────────┴────────┐          ┌─────────┴────────┬────────┴────────┬────────┴────────┬────────┴─────────────────┴─────────────────┴─────────────────┘
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                                                                                                     &none             &trans            &none                        &none              &trans            &none
                                //                                                                                 │                 │                 │                 │          │                  │                 │                 │
                                //                                                                                 └─────────────────┴─────────────────┴─────────────────┘          └──────────────────┴─────────────────┴─────────────────┘
                        >;
                };
        };
};
